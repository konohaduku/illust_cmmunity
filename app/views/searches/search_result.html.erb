<h2>検索結果</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <!--%= link_to (@search.user) do %>-->
          <th></th>
          <td><%= image_tag user.get_profile_image(50, 50) %></td>
          <td><%= link_to user.name, user %></td>
          <!--% end %>-->
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
    <% @illusts.each do |illust| %>
             <%= link_to illust_path(illust.id) do %>
                <% illust.illust_images.each do |illust_image| %>
                 <%= image_tag(illust_image, width:400, height:350) %>
                <% end %>
              <% end %>
    <% end %>
    </tbody>
  <% end %>
</table>