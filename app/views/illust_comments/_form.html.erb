<%= form_with model: [illust, illust_comment], local: false do |f| %>
    <div id="comments-error">
    <%= render 'layouts/error_messages', model: f.object %>
    </div>
    <%= f.text_area :illust_comment, rows:'5',placeholder: "コメントをここに" %>
    <%= button_tag type: "submit", class: "btn btn-default" do %>
    <h5><i class="fas fa-paper-plane" style="color: #dba9d9;"></i></h5>
    <% end %>
  <% end %>